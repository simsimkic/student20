<UserControl x:Class="ProjekatBolnica.View.PatientView.SurvayQuestions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjekatBolnica.View.PatientView"
             mc:Ignorable="d" 
             FontSize="14"
             d:DesignHeight="150" d:DesignWidth="430">
    <Border>
        <Grid Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBox Name="questionTxt" BorderThickness="0" Margin="5" TextWrapping="Wrap" IsReadOnly="True" Text="{Binding Question}"/>

            <ComboBox Name="answersComboBox" Grid.Row="1" Margin="10,5" />
        </Grid>
    </Border>
</UserControl>
